@model BibliotecaPessoal.Dto.LoginModelDto
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Pessoal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center align-items-center">
            <div class="col-md-7 col-lg-5">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h3 class="fw-bold mb-2 text-uppercase text-center">Biblioteca Pessoal</h3>
                        <h4 class="fw-bold mb-2 text-uppercase text-center">Login</h4>
                        <p class="text-white-50 mb-3 text-center">Por favor, insira seu email e senha!</p>

                        <form asp-action="Login" method="post">

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="Email">E-mail</label>
                                <input type="email" id="Email" name="Email" class="form-control form-control-lg" asp-for="@Model.Email" required />
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="Senha">Senha</label>
                                <input type="password" id="Senha" name="Senha" class="form-control form-control-lg" required />
                            </div>

                            <p class="small mb-3 pb-lg-2"><a class="text-white-50" href="#!">Esqueceu a senha?</a></p>

                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg px-5" type="submit">Login</button>
                            </div>
                        </form>
                         <hr class="my-4">
                        <div>
                            <p class="mb-0 text-center">NÃ£o tem uma conta? <a asp-controller="Usuario" asp-action="Cadastrar" class="text-white-50 fw-bold">Cadastre-se</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
