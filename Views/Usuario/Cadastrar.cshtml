@model BibliotecaPessoal.Dto.UsuarioCadastrarModelDto
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Pessoal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container p-2">
        <div class="row vh-100 d-flex justify-content-center align-items-center">
            <div class="col-md-7 col-lg-5">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h3 class="fw-bold mb-2 text-uppercase text-center">Biblioteca Pessoal</h3>
                        <h4 class="fw-bold mb-2 text-uppercase text-center">Cadastro</h4>
                        <p class="text-white-50 mb-3 text-center">Por favor, preencha os dados para criar sua conta!</p>

                        <form asp-action="Cadastrar" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="NomeCompleto">Nome Completo</label>
                                <input type="text" asp-for="NomeCompleto" class="form-control form-control-lg" required />
                                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Email">Email</label>
                                <input type="email" asp-for="Email" class="form-control form-control-lg" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Password">Senha</label>
                                <input type="password" asp-for="Password"  class="form-control form-control-lg" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="ConfirmPassword">Confirmar Senha</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid mt-4">
                                <button class="btn btn-primary btn-lg px-5" type="submit">Cadastrar</button>
                            </div>
                        </form>
                         <hr class="my-4">
                        <div>
                            <p class="mb-0 text-center">Já tem uma conta? <a asp-controller="Usuario" asp-action="Login" class="text-white-50 fw-bold">Faça o login</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
