@{
    ViewData["Title"] = "Editar";
    var generosList = ViewBag.Generos as List<BibliotecaPessoal.Dto.GeneroDto>;
    Layout = "_Layout";
}

@model LivroEditarDto

<div class="row">

    @if (TempData["Mensagem"] != null)
    {
        <partial name="_MensagemPartial" model='TempData["Mensagem"]' />
    }

    <div class="col-md-6 offset-md-3 pt-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <form asp-action="EditarLivro" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.IdLivro" value="@Model.IdLivro" />

            <input type="hidden" asp-for="@Model.IdUsuario" value="@Model.IdUsuario" />

            <div class="form-group mb-3">
                <label asp-for="@Model.Titulo" class="control-label"></label>
                <input asp-for="@Model.Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Autor" class="control-label"></label>
                <input asp-for="@Model.Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Capa do Livro</label>
                <input type="file" name="capaArquivo" class="form-control" accept="image/*" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="@Model.IdGenero" class="control-label"></label>
                <select asp-for="@Model.IdGenero" class="form-control">
                    <option value="">-- Selecione um GÃªnero --</option>
                    @if (generosList != null)
                    {
                        foreach (var g in generosList)
                        {
                            <option value="@g.Id">@g.NomeGenero</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdGenero" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn btn-primary px-4" />
                <a asp-action="DetalhesLivro" asp-route-IdLivro="@Model.IdLivro" class="btn btn-secondary px-4">Voltar</a>
            </div>
        </form>
    </div>
</div>