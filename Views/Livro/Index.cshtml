@using BibliotecaPessoal.Dto
@{
    ViewData["Title"] = "Livros";
}

@model IEnumerable<LivroDto>

<div class="container mt-4">
    <div class="d-flex justify-content-end align-items-center mb-4">
        <a asp-action="CadastrarLivro" class="btn btn-primary">Cadastrar Livro</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center mt-5 sem-livros">
            <p>Nenhum livro cadastrado</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var livro in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <a asp-action="Details" asp-route-id="@livro.IdLivro" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(livro.CapaUrl))
                            {
                                <img src="@livro.CapaUrl" class="card-img-top" alt="Capa do @livro.Titulo" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-white">Sem Imagem</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@livro.Titulo</h5>
                                <p class="card-text"><small class="text-muted">@livro.Autor</small></p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>