@if (TempData.ContainsKey("Mensagem"))
{
  var mensagem = MensagemPartial.Deserializar(TempData["Mensagem"].ToString());

  @if (mensagem.Tipo == TipoMensagem.Sucesso)
  {
    <div class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
      @mensagem.Mensagem
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }
  else if (mensagem.Tipo == TipoMensagem.Erro)
  {
    <div class="alert alert-danger mt-3 alert-dismissible fade show" role="alert">
      @mensagem.Mensagem
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }
  else
  {
    <div class="alert alert-warning mt-3 alert-dismissible fade show" role="alert">
      @mensagem.Mensagem
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }
}