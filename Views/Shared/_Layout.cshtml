@using Microsoft.AspNetCore.Identity;
@using BibliotecaPessoal.Models; 
@inject UserManager<UsuarioModel> UserManager;

@{
    var usuario = await UserManager.GetUserAsync(Context.User);
}

<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaPessoal</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilos para a sidebar e toggle */
        #sidebar {
            width: 250px;
            transition: all 0.3s;
            z-index: 1030; /* Garante que a sidebar fique acima do conteúdo */
        }

        #content {
            width: calc(100% - 250px);
            margin-left: 250px;
            transition: all 0.3s;
        }

        /* Estado 'toggled' para esconder a sidebar */
        #sidebar.toggled {
            margin-left: -250px;
        }

        #content.toggled {
            width: 100%;
            margin-left: 0;
        }

        .toggle-btn {
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Estilos aprimorados para os links da sidebar */
        .sidebar-nav .nav-link {
            color: #adb5bd; /* Cor de texto mais suave para links inativos */
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem; /* Bordas arredondadas */
            transition: all 0.2s ease-in-out;
            display: flex;
            align-items: center;
        }

        .sidebar-nav .nav-link:hover {
            background-color: #343a40; /* Fundo mais claro no hover */
            color: #fff;
        }

        /* Estilo para o link ativo */
        .sidebar-nav .nav-link.active {
            background-color: #0d6efd; /* Cor primária do Bootstrap */
            color: #fff;
            font-weight: 500;
        }

        .sidebar-nav .nav-link.active i {
            color: #fff;
        }

        .sidebar-header {
            border-bottom-color: #343a40 !important;
        }
    </style>
</head>
<body class="overflow-x-hidden">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark min-vh-100 position-fixed shadow">
            <div class="sidebar-header p-4 border-bottom">
                <a class="navbar-brand text-white fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">Biblioteca Pessoal</a>
            </div>

            <ul class="nav nav-pills flex-column p-3 sidebar-nav">
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewData["Title"].ToString() == "Inicio" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill me-2"></i> Início
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewData["Title"].ToString() == "Livros" ? "active" : "")" asp-area="" asp-controller="Livros" asp-action="Index">
                        <i class="bi bi-book-fill me-2"></i> Livros
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewData["Title"].ToString() == "Empréstimos" ? "active" : "")" asp-area="" asp-controller="Emprestimos" asp-action="Index">
                        <i class="bi bi-arrow-left-right me-2"></i> Empréstimos
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content" class="min-vh-100">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow-sm">
                <div class="container-fluid">
                    <i class="bi bi-list toggle-btn" id="sidebarCollapse"></i>

                    <!-- User Dropdown -->
                    <div class="ms-auto">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> Olá, @usuario?.NomeCompleto
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Atualizar Cadastro</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-controller="Usuario" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Deslogar</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main role="main" class="container-fluid pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('toggled');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
