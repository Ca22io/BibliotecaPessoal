<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaPessoal</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilos personalizados mínimos para o funcionamento da sidebar */
        
    </style>
</head>
<body class="overflow-x-hidden">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bs-dark min-vh-100 position-fixed">
            <div class="sidebar-header p-4 border-bottom border-secondary">
                <a class="navbar-brand text-white fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">Biblioteca Pessoal</a>
            </div>

            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    <a class="nav-link text-secondary active" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill me-2"></i> Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-controller="Livros" asp-action="Index"><i class="bi bi-book-fill me-2"></i> Livros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-controller="Emprestimos" asp-action="Index"><i class="bi bi-person-fill me-2"></i> Emprestimos</a>
                </li>
            </ul>

        </nav>

        <!-- Page Content -->
        <div id="content" class="min-vh-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm">
                <div class="container-fluid">
                    <i class="bi bi-list toggle-btn" id="sidebarCollapse"></i>
                </div>
            </nav>

            <main role="main" class="container-fluid pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap JS Bundle -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('toggled');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
